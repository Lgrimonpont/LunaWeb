<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<tiles-definitions>

	<definition name="baseLayout" template="/jsp/template/BaseLayout.jsp">
		<put-attribute name="title" value="Template" />
		<put-attribute name="header" value="/jsp/template/Header.jsp" />
		<put-attribute name="menu" value="/jsp/template/Menu.jsp" />
		<put-attribute name="body" value="/jsp/template/Body.jsp" />
		<put-attribute name="footer" value="/jsp/template/Footer.jsp" />
	</definition>

	<definition name="welcome" extends="baseLayout">
		<put-attribute name="title" value="Welcome" />
		<put-attribute name="body" value="/jsp/template/Welcome.jsp" />
	</definition>

	<definition name="friends" extends="baseLayout">
		<put-attribute name="title" value="Friends" />
		<put-attribute name="body" value="/jsp/template/Friends.jsp" />
	</definition>

	<definition name="office" extends="baseLayout">
		<put-attribute name="title" value="Office" />
		<put-attribute name="body" value="/jsp/template/Office.jsp" />
	</definition>
 
</tiles-definitions>